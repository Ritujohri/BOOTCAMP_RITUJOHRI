<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>RandomNumberServlet</servlet-name>
        <servlet-class>cdk.com.example.RandomNumberServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailsServlet</servlet-name>
        <servlet-class>cdk.com.example.DetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MatchDetailServlet</servlet-name>
        <servlet-class>cdk.com.example.MatchDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RandomNumberServlet</servlet-name>
        <url-pattern>/today</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DetailsServlet</servlet-name>
        <url-pattern>/person</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MatchDetailServlet</servlet-name>
        <url-pattern>/match</url-pattern>
    </servlet-mapping>
</web-app>